<h1>蔵書管理アプリケーション Shelf</h1>
<table class="table table-striped">
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title,book %></td>
    <td><%= book.authors %></td>
    <td><%= book.publish_year %></td>
    <td><%= link_to "修正", [ :edit, book ] %></td>
    <td><%= link_to "削除", book, :method => :delete, :confirm => "本当に削除しますか？" %></td>
  </tr>
  <% end %>
</table>
<%= link_to "新規登録", [:new, :book], :class => "btn btn-primary" %>
