<%= form_tag [:search, :books ], :method => :get, :class => "well form-search" do %>
<%= text_field_tag "query", params[:query], :class => "input-medium search-query" %>
<%= submit_tag "検索", :class => "btn" %>
<% end %>
<table class="table table-striped">
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title,book %></td>
    <td><%= book.authors %></td>
    <td><%= book.publish_year %></td>
    <td><%= links_for( book ) %></td>
  </tr>
  <% end %>
</table>
<div>
<%= paginate @books %>
</div>
<%= link_to "新規登録", [:new, :book], :class => "btn btn-primary" %>
